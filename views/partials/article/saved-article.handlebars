
{{#unless unsaved}}
<div class="panel panel-primary">
	<div class="panel-heading">
		
		<button type="submit" data-read="{{unsaved}}" id="unsave-article" data-id="{{_id}}" class="btn-sm btn-danger pull-right"><span>Saved</span></button>
		
		<button type="submit" id="add-note" data-id="{{_id}}" class="btn-sm btn-danger pull-right" data-toggle="modal" data-target="#myModal{{this._id}}">Add Comment</button>
		<a href="{{link}}"> {{title}}</a>
		
	</div>
	<div class="panel-body">
		{{summary}}
		
	</div>
</div>
{{/unless}}



<!-- Modal content-->
<div id="myModal{{_id}}" class="modal fade" role="dialog" data-id="modal{{_id}}">
	<div class="modal-dialog">
		
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">{{title}}</h4>
			</div>
			<div class="modal-body">
				<div class="show-notes">
					{{#each note}}
					<p>{{this/comment}}</p>
					
					{{else}}
					<p class="empty">No Comments</p>
					{{/each}}
				</div>
				
		<form>
				<div class="form-group">
					<label for="bodyinput">Comment</label>
					<textarea type="text" class="form-control" rows="3" id="bodyinput{{_id}}"> </textarea>
				</div>
				<button type="submit" class="btn btn-default" data-id="{{_id}}" id="savenote">Submit</button>

		</form>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>