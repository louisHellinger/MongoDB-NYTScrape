<div class="panel panel-primary">
	<div class="panel-heading">

		<button type="submit" id="add-note" data-id="{{_id}}" class="btn-sm btn-danger pull-right" data-toggle="modal" data-target="#myModal{{_id}}">Add Comment</button>


		{{#if unsaved}}
		
		<button type="submit" data-read="{{unsaved}}" id="save-article" data-id="{{_id}}" class="btn-sm btn-danger pull-right">Save Article</button>
		
		{{else}}

		<button type="submit" data-read="{{unsaved}}" id="unsave-article" data-id="{{_id}}" class="btn-sm btn-danger pull-right"><span>Saved</span> </button>
		{{/if}}

		<a href="{{link}}">{{title}}</a>
		
	</div>
	<div class="panel-body">
		{{summary}}
		
	</div>
	
</div>
<!-- Modal content-->
<div id="myModal{{_id}}" class="modal fade" role="dialog" data-id="modal{{_id}}">
	<div class="modal-dialog">
		
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">{{title}}</h4>
			</div>
			<div class="modal-body">

				<div id="comments"></div>

{{!-- 				{{#each note.comment}}
				<p>{{comment}}</p>
				{{else}}
				<p class="empty">No Comments</p>
				{{/each}} --}}


<form>
	<div class="form-group">
		<div class="form-group">
			<label for="bodyinput">Comment</label>
			<textarea type="text" class="form-control" rows="3" id="bodyinput{{_id}}"> </textarea>
		</div>
		<button type="submit" class="btn btn-default" data-id="{{_id}}" id="savenote">Submit</button>

</div>

</form>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>